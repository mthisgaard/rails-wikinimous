<div class="container m-4">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <p>
    <%= link_to 'Edit', edit_article_path, class: 'btn btn-primary mt-4' %>
    <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-primary mt-4' %>
  </p>
  <p><%= link_to 'See all', articles_path, class: 'btn btn-primary mt-2' %></p>
</div>
