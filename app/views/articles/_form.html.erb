<%= form_for(@article) do |f| %>
  <div class="form-group mt-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary mt-4' %>
<% end %>
