<%= form_for(@task) do |f| %>
  <div class="form-group mt-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mt-4">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <% if @task.persisted? %>
    <div class="form-group mt-4">
      <%= f.label :completed? %>
      <%= f.check_box :completed %>
    </div>
  <% end %>
  <%= f.submit class: 'btn btn-primary mt-4' %>
<% end %>
